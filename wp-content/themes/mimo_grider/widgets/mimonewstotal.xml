<?xml version="1.0" encoding="utf-8"?>
	<!-- $Id: style.xml 16565 2010-04-28 12:21:27Z ian $ -->
<form>
	<fieldset name="widget">
		<field name="title" type="text" label="Title" description="Title" class="widefat" size="30" default="Latest Posts" readonly="false"/>
		<field name="numbertotal" type="text" label="Number of Total Posts to Show:" description="Number of posts to show" class="widefat" size="30" default="20" readonly="false"/>
		<field name="postperpagetotal" type="text" label="Number of Posts Per Page:" description="Number of posts to show" class="widefat" size="30" default="2" readonly="false"/>
		<field name="menu_class" type="text" label="List Class" description="List Class" class="widefat" size="30" default="" readonly="false"/>
		<field name="cattotal" type="text" label="Category" description="Set or exclude the categories using theirs ID" class="widefat" size="30" default="" readonly="false"/>
		<field name="showtitletotal" type="list" label="Show Title:" description="Include Title:" class="widefat" default="yes">
		    <option value="yes">Yes</option>
            <option value="no">No</option>
		</field>
		<field name="showrating" type="list" label="Show Rating:" description="Show Rating:" class="widefat" default="yes">
		    <option value="yes">Yes</option>
            <option value="no">No</option>
		</field>
		<field name="showimagetotal" type="list" label="Show Image:" description="Include Image:" class="widefat" default="yes">
		    <option value="yes">Yes</option>
            <option value="no">No</option>
		</field>
		<field name="showcontenttotal" type="list" label="Show Excerpt:" description="Include Excerpt:" class="widefat" default="yes">
		    <option value="yes">Yes</option>
            <option value="no">No</option>
		</field>
		<field name="showreadontotal" type="list" label="Show More Link:" description="Include More Link:" class="widefat" default="yes">
		    <option value="yes">Yes</option>
            <option value="no">No</option>
		</field>
		<field name="showinfototal" type="list" label="Show Date:" description="Include Search Form:" class="widefat" default="yes">
		    <option value="yes">Yes</option>
            <option value="no">No</option>
		</field>
		<field name="showpagtotal" type="list" label="Show Pagination:" description="Include Pagination:" class="widefat" default="yes">
		    <option value="true">Yes</option>
            <option value="false">No</option>
		</field>
		<field name="startslidertotal" type="list" label="Start News slider:" description="Automatically start sliding news" class="widefat" default="false">
		    <option value="true">Yes</option>
            <option value="false">No</option>
		</field>
	</fieldset>
</form>