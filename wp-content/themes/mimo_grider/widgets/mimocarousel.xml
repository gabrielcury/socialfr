<?xml version="1.0" encoding="utf-8"?>
	<!-- $Id: style.xml 16565 2010-04-28 12:21:27Z ian $ -->
<form>
	<fieldset name="widget">
		<field name="title" type="text" label="Title" description="Title" class="widefat" size="30" default="Mimo Carousel" readonly="false"/>
		<field name="ccol" type="list" label="Number of Columns to Use:" description="Number of Columns to Use:" class="widefat"  default="3">
		    <option value="1">1</option>
            <option value="2">2</option>
			<option value="3">3</option>
			<option value="4">4</option>
		</field>
		<field name="showcat" type="list" label="Show category name:" description="Show category name:" class="widefat"  default="yes">
		    <option value="yes">Yes</option>
            <option value="no">No</option>
		</field>
		<field name="showrating" type="list" label="Show Rating:" description="Show Rating:" class="widefat" default="yes">
		    <option value="yes">Yes</option>
            <option value="no">No</option>
		</field>
		<field name="ctax" type="text" label="Categories to show:" description="Categories to show" class="widefat" size="30" default="" readonly="false"/>
		<field name="cshow" type="text" label="Posts to show:" description="Number of posts" class="widefat" size="30" default="20" readonly="false"/>
		
	</fieldset>
</form>